FROM scratch
LABEL maintainer=Ulrich
ADD openSUSE-Leap-42.3.base.x86_64.tar.xz /
RUN zypper --non-interactive ref
RUN zypper --non-interactive up
RUN zypper --non-interactive clean -a

COPY zulu8.28.0.1-jdk8.0.163-linux.x86_64.rpm /tmp

RUN zypper --non-interactive install --force /tmp/zulu8.28.0.1-jdk8.0.163-linux.x86_64.rpm \
 && rm -f /tmp/zulu8.28.0.1-jdk8.0.163-linux.x86_64.rpm \
 && zypper --non-interactive clean -a

 